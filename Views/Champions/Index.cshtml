@model IEnumerable<BattleOfChampions.Models.Champion>

@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
<h1>Index of Champions</h1>
<p>Here you can see a list of all the Champions you have created and added to the database.</p>
<p>Don't see any Champions yet? Click 'Create' below!</p>
 <a class = "btn btn-primary" asp-action="Create">Create A New Champion</a>
</div>
<hr/>
<p> You must Login or Register for a new user account in order to create a champion. 
<ol><li>Click "Create a New Champion" or "Register" in the nav bar</li>
<li>Follow the prompts to pick an email and password. Don't worry about using a real email address.</li>
<li>When you see the Register Confirmation screen, be sure to click the link that says "Click here to confirm your account."</li>
<li>After confirming, click "Login" in the nav bar and log in using your new credentials.</li></ol>

<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChampionID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attack)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Defense)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Speed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Health)
            </th>
            <th>
                Equipment
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ChampionID)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Attack)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Defense)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Speed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Health)
            </td>
             <td>
               @if (item.Equipment != null)
                    {
                        @Html.DisplayFor(modelItem => item.Equipment.Name)
                    }
                    
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ChampionID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ChampionID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ChampionID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
